{% extends 'base.html.twig' %}

{% block title %}Réservation
	{{ rental.title }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Réservez pour l'annonce :
			<em>{{ rental.title }}</em>
		</h1>

		<p>Vous êtes sur le point de réserver chez de
			<strong>{{ rental.author.fullName }}</strong></p>

		{{ form_start(form) }}
		<div class="alert alert-light">
			<h2 class="h4">Date du séjour :</h2>
			<div class="row">
				<div class="col">
					{{form_row(form.startAt)}}
				</div>
				<div class="col">
					{{form_row(form.endAt)}}
				</div>
			</div>
			<h4 class="mt-2">Montant du séjour :
				<span id="amount">...</span>
				&euro;</h4>
			<span id="days">0</span>
			nuit(s) à
			{{ rental.price }}&euro; par nuit

			<h4 class="mt-3">Laisser un commentaire :</h4>
			{{ form_row(form.comment) }}
		</div>


		<h2>Vous avez terminé !</h2>
		<p>Petit week-end ou vacances de rêve ? Hébergement pour le travail ? Peu importe, on est avec vous !</p>

		<button type="submit" class="btn btn-success">Je réserve !</button>

		{{form_end(form)}}

	</div>
{% endblock %}
