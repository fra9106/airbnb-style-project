{% extends 'admin/base.html.twig' %}

{% block title %}Modification des commentaires!
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="my-5">Modification du commentaires n°
			{{ comment.id }}</h1>

		<div class="alert alert-info mt-3">
			<p><strong>Annonce lié :</strong>
				{{ comment.rental.title }}</p>
			<p><strong>Auteur :</strong>
				{{ comment.author.fullName }}</p>
			<p><strong>Date de création :</strong>
				{{ comment.createdAt | date('d/m/Y H:i')  }}</p>
			<p><strong>Note donnée :</strong>
				{{ comment.rating }}</p>
		</div>
		<div class="my-3">

			{{ form_start(form) }}

			{{ form_widget(form) }}<br>

			<button type="submit" class="btn btn-primary">
				<i class="fas fa-check"></i>
				Enregistrer les modifications</button>

			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}
