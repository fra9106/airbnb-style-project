{% extends 'admin/base.html.twig' %}

{% block title %}Modification de la résa numéro
	{{booking.id}}
{% endblock %}

{% form_theme form _self %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Modification de la réservation N°
			{{ booking.id }}</h1>

		{{ form_start(form) }}

		<div class="row">
			<div class="col">
				{{ form_row(form.startAt) }}
				{{ form_row(form.endAt) }}
				{{ form_row(form.comment) }}
			</div>
			<div class="col">
				{{ form_row(form.booker) }}
				{{ form_row(form.rental) }}
				<br>
				<button type="submit" class="btn btn-primary">
					<i class="fas fa-check"></i>
					Enregistrer les modifications</button>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
