{% extends 'admin/base.html.twig' %}

{% block title %}Administration de réservations
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<h1 class="my-5">Gestion des réservations</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th>Client</th>
					<th>Annonce</th>
				</tr>
			</thead>

			<tbody>
				{% for booking in bookings %}
					<tr>
						<td>{{booking.id}}</td>
						<td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
						<td>
							<img src="{{booking.booker.picture}}" alt="Avatar de {{booking.booker.fullName}}" class="mini-avatar mr-2">
							{{booking.booker.fullName}}
						</td>

						<td>{{booking.rental.title}}</td>
						<td>
							<a href="#" class="btn btn-primary">
								<i class="fas fa-edit"></i>
							</a>
							<a href="#" class="btn btn-danger" onclick="return confirm('Êtes-sûr de vouloir supprimer l'annonce ?')">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
