{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="my-5">Gestion des utilisateurs</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date d'inscription</th>
					<th>Utilisateur</th>
					<th>Mail</th>
					<th>Introduction</th>
				</tr>
			</thead>

			<tbody>
				{% for user in users %}
					<tr>
						<td>{{user.id}}</td>
						<td>{{user.createdAt | date('d/m/Y H:i')}}</td>
						<td>
							<img src="{{user.picture}}" alt="Avatar de {{user.fullName}}" class="mini-avatar mr-2">
							{{user.fullName}}
						</td>
                        <td>{{user.email}}</td>
						<td>{{user.introduction}}</td>
						<td>
							<a href="#" class="btn btn-primary my-1">
								<i class="fas fa-edit"></i>
							</a>
							<a href="#" class="btn btn-danger" onclick="return confirm('Êtes-sûr de vouloir supprimer l'annonce ?')">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
